<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="vAdd"
            type="com.example.jsy.wordapp.bind.VocabularyAddBind" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:onClick="backClick"
            android:text="@{vAdd.topButton}"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@{vAdd.textView}"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/vocabularyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="単語帳の名前を入力してください"
            android:text="@{vAdd.vocabularyName}"
            android:textSize="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:onClick="vocabularySave"
            android:text="@{vAdd.bottomButton}"
            android:textSize="25dp" />
    </LinearLayout>
</layout>
