<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="wAdd"
            type="com.example.jsy.wordapp.bind.WordAddBind" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_orange_light"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:onClick="backClick"
                android:text="@{wAdd.topButton}"
                android:textSize="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="@{wAdd.japan}"
                android:textSize="25dp"
                />
            <EditText
                android:id="@+id/japaneseWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="単語入力してください"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="@{wAdd.korean}"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/koreanWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="한국어를 입력해주세요"
                android:textSize="15dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:onClick="wordSaveButton"
                android:text="@{wAdd.bottomBotton}"
                android:textSize="25dp" />
        </LinearLayout>
    </LinearLayout>
</layout>